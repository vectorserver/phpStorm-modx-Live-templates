    <context>
      <option name="HTML" value="true" />
      <option name="TPL" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="[[*id:is=`1`:and:if=`[[*id]]`:ne=`2`:then=`Да`:else=`Нет`]]" value="[[*id:is=`1`:and:if=`$ID$`:ne=`2`:then=`Да`:else=`Нет`]]" description="if - задает дополнительное условие. input - добавляет в тег обратываемые данные" toReformat="false" toShortenFQNames="true">
    <variable name="ID" expression="" defaultValue="[[*id]]" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="TPL" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="[^qt^]" value="[^qt^]" description="Выводит время потраченное на запросы к базе данных" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="TPL" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="[^q^]" value="[^q^]" description="Выводит количество запросов к базе данных" toReformat="false" toShortenFQNames="true">
