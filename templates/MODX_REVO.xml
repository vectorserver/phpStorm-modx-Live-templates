<templateSet group="MODX_REVO">
  <template name="[[*id]]" value="[[*id]]" description="Идентификатор ресурса страницы (устанавливается MODX при создании страницы." toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="TPL" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="[[*pagetitle]]" value="[[*pagetitle]]" description="Название страницы." toReformat="false" toShortenFQNames="true">
