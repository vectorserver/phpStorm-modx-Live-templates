    <context>
      <option name="HTML" value="true" />
      <option name="TPL" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="[[*menutitle]]" value="[[*menutitle]]" description="Название используется, когда страница появляется в меню." toReformat="false" toShortenFQNames="true">
