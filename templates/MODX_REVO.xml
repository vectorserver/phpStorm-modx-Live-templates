  </template>
  <template name="[[pdoResources]]" value="[[pdoResources?&#10;    &amp;parents=`$PARENTS$`&#10;    &amp;tpl=`$TPL$`&#10;    &amp;includeTVs=`$TV$`&#10;]]&#10;&lt;!--https://docs.modx.pro/komponentyi/pdotools/snippetyi/pdoresources--&gt;" description="Сниппет предназначен для вывода списка ресурсов." toReformat="false" toShortenFQNames="true">
    <variable name="PARENTS" expression="" defaultValue="1" alwaysStopAt="true" />
    <variable name="TPL" expression="" defaultValue="ListRowTpl" alwaysStopAt="true" />
    <variable name="TV" expression="" defaultValue="image" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="TPL" value="true" />
      <option name="Twig" value="true" />
